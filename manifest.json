{
    "manifest_version": 3,
    "name": "Bard to Markdown",
    "version": "0.0.1",
    "description": "A Chrome extension to save Bard Q&A contents as markdown",
    "permissions": ["activeTab", "scripting"],
    "action": {
        "default_icon": "./icon_drawing_scripts/bard_icon.png"
    },
    "icons": {
        "16": "./icon_drawing_scripts/bard_icon.png",
        "48": "./icon_drawing_scripts/bard_icon.png",
        "128": "./icon_drawing_scripts/bard_icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+Shift+6",
                "mac": "Alt+Shift+6"
            },
            "description": "Save Bard Q&A"
        }
    }
}
